<li>
  <strong>ID:</strong> <%= product.id %><br>
  <strong>Title:</strong> <%= product.title %><br>
  <strong>Description:</strong> <%= product.description %><br>
  <strong>Price:</strong> <%= "#{product.price} $" %><br>
  <strong>Vegetarian:</strong> <%= product.vegetarian %><br>
  <strong>Category:</strong> <%= product.category.category_name %><br>

  <%= button_to "Edit", edit_product_path(product) %>
  <%= button_to "Delete", destroy_product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %>
  <br>
</li>
